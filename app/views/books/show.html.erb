<h1><%= @book.title %></h1>
<p>Author: <%= @book.author %></p>
<p>ISBN: <%= @book.isbn %></p>
<% if @book.borrowed? %>
  <p>This book is currently borrowed.</p>
<% else %>
  <%= button_to 'Borrow', borrowings_path(book_id: @book.id), method: :post %>
<% end %>
<%= link_to 'Back to Books', books_path %>